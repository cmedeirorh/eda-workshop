{{ ansible_managed | comment }}
node: "FIM"
events:
  destination: both
  file: /var/lib/fim/events.json
  endpoint:
    address: {{ eda_event_streams_url }}
    insecure: true
    credentials:
      user: eda-user
      token: {{ eda_event_streams_token }}
monitor:
  - path: /etc/fim/config.yml
    labels: ["fim"]
  - path: /etc/modprobe.d/dev-sec.conf
    labels: ["devsec"]
  - path: /etc/audit/auditd.conf
    labels: ["devsec"]    
  - path: /etc/security/limits.d/10.hardcore.conf
    labels: ["devsec"]  
  - path: /etc/systemd/coredump.conf.d/custom.conf
    labels: ["devsec"]
  - path: /etc/pam.d/system-auth
    labels: ["devsec"]
  - path: /etc/pam.d/password-auth-local
    labels: ["devsec"]
  - path: /etc/pam.d/password-auth
    labels: ["devsec"]
log:
  file: /var/log/fim/fim.log
  level: info
